---
import NavLink from "./NavLink.astro";
---

<nav
  class="z-30 absolute inset-0 bg-white sm:bg-white/0 px-6 sm:static sm:px-14"
>
  <ul
    id="primary-nav"
    class="h-full text-xs font-semibold flex justify-end items-center space-x-8 sm:justify-start sm:text-white"
  >
    <NavLink>home</NavLink>
    <NavLink>about</NavLink>
    <NavLink>shop</NavLink>
    <NavLink>contact</NavLink>
  </ul>
</nav>

<style lang="scss">
  nav {
    transform: translateY(-100%);

    ul {
      opacity: 0;
      transform: translateX(100%);
    }

    .scrim {
      position: abolute;
      inset: 0;
      background-color: red;
    }

    &.menu-visible {
      transform: translateY(0%);

      ul {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @media (min-width: 40em) {
      transform: none;

      ul {
        opacity: 1;
        transform: none;
      }
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    nav {
      transition: transform 150ms ease-in-out;

      ul {
        transition: transform 150ms ease-in-out 150ms,
          opacity 150ms ease-in-out 200ms;
      }
    }
  }
</style>
