---
import Logo from "../components/Logo.astro";
import Nav from "../components/Nav.astro";
import NavToggle from "../components/NavToggle.astro";
import NavScrim from "../components/NavScrim.astro";

import HeroSlides from "../components/Hero/HeroSlides.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="images/favicon-32x32.png" />
    <title>Front End Mentor - Room Homepage</title>
    <link
      rel="stylesheet"
      type="text/css"
      href={Astro.resolve("../styles/global.css")}
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Spartan:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="no-js font-medium">
    <a
      href="#main-content"
      class="absolute z-50 bg-white px-8 py-4 uppercase tracking-5 font-bold text-xs -translate-y-full focus:-translate-y-0 transition-transform duration-150 ease-in-out"
      >Skip to content</a
    >

    <NavScrim />
    <header
      class="z-30 absolute top-0 left-0 right-0 min-h-[6.875rem] md:min-h-[8.875rem] flex items-center overflow-hidden sm:px-16"
    >
      <div class="mx-auto sm:mx-0"><Logo /></div>
      <div class="js-only z-40 absolute left-0 sm:hidden">
        <NavToggle />
      </div>
      <Nav />
    </header>

    <main
      id="main-content"
      class="grid grid-cols-1 lg:grid-cols-[1fr,1fr,10rem,1fr] lg:grid-rows-[1fr,5rem,1fr]"
    >
      <!-- Hero/Slider Section -->
      <HeroSlides />

      <!-- About Section -->
      <div class="lg:col-start-1 lg:row-start-3">
        <img
          class="w-full object-cover"
          src="/images/image-about-dark.jpg"
          alt=""
        />
      </div>
      <div
        class="py-14 px-8 sm:text-center lg:text-left lg:row-start-3 lg:col-span-2 lg:py-[4.25rem] lg:px-12"
      >
        <h2 class="uppercase font-bold text-xs tracking-5 leading-[1.83]">
          About Our Furniture
        </h2>
        <p
          class="text-xs text-gray-600 pt-2 tracking-body leading-[1.66] sm:max-w-prose sm:mx-auto"
        >
          Our multifunctional collection blends design and function to suit your
          individual taste. Make each room unique, or pick a cohesive theme that
          best express your interests and what inspires you. Find the furniture
          pieces you need, from traditional to contemporary styles or anything
          in between. Product specialists are available to help you create your
          dream space.
        </p>
      </div>
      <div class="lg:col-start-4 lg:row-start-3">
        <img
          class="w-full object-cover"
          src="/images/image-about-light.jpg"
          alt=""
        />
      </div>
    </main>
  </body>
</html>

<script hoist defer src={Astro.resolve("./main.js")}></script>
